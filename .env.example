# Copy this file to .env.local and replace placeholders with your values.
# Demo mode (default) uses bundled mock data. Set provider to alpha_vantage for live data.
NEXT_PUBLIC_MARKET_DATA_PROVIDER=demo

# Required when using Alpha Vantage
NEXT_PUBLIC_ALPHA_VANTAGE_API_KEY=

# Optional tuning knobs (defaults shown)
NEXT_PUBLIC_MARKET_DATA_TIMEOUT_MS=10000
NEXT_PUBLIC_MARKET_DATA_MAX_RETRIES=2
NEXT_PUBLIC_MARKET_DATA_BACKOFF_MS=500
# Set to "full" if you need the entire Alpha Vantage history (slower, more data)
NEXT_PUBLIC_ALPHA_VANTAGE_OUTPUT_SIZE=compact
